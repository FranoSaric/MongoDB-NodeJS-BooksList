<h3>{{viewTitle}}</h3>
<form action="/book" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{book._id}}">
    <div class="form-group">
        <label>Naziv</label>
        <input type="text" class="form-control" name="naziv" placeholder="Naziv" value="{{book.naziv}}">
        <div class="text-danger">
            {{book.nazivError}}
        </div>
    </div>    
    <div class="form-group">
        <label>Autor</label>
        <input type="text" class="form-control" name="autor" placeholder="Autor" value="{{book.autor}}">
        <div class="text-danger">
            {{book.autorError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Godina objave</label>
            <input type="text" class="form-control" name="godina_objave" placeholder="Godina objave" value="{{book.godina_objave}}">
            <div class="text-danger">
                {{book.godina_objaveError}}
            </div>
        </div>
        <div class="form-group col-md-6">
            <label>Datum objave</label>
            <input type="text" class="form-control" name="datum_objave" placeholder="Datum objave" value="{{book.datum_objave}}">
            <div class="text-danger">
                {{book.datum_objaveError}}
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Cijena</label>
            <input type="text" class="form-control" name="cijena" placeholder="Cijena" value="{{book.cijena}}">
            <div class="text-danger">
                {{book.cijenaError}}
            </div>
        </div>
        <div class="form-group col-md-6">
            <label>Broj stranica</label>
            <input type="text" class="form-control" name="broj_stranica" placeholder="Broj stranica" value="{{book.broj_stranica}}">
            <div class="text-danger">
                {{book.broj_stranicaError}}
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Potvrdi</button>
        <a href="/book/list" class="btn btn-secondary"><i class="fa fa-list-alt"> Popis knjiga</i></a>
    </div>
</form>